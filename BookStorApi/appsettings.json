{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "BookStorApiContext": "Server=.;Database=BookStorDb;Trusted_Connection=True;MultipleActiveResultSets=true ;TrustServerCertificate=True"
  },
  //allow cors 
"Cors": {
    "CorsPolicy": {
      "AllowAnyOrigin": true,
      "AllowAnyMethod": true,
      "AllowAnyHeader": true,
      "AllowCredentials": true
    }
  }
}